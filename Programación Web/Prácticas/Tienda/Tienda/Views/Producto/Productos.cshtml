@model IEnumerable<Tienda.Models.Producto>

@{
    ViewData["Title"] = "Productos";
}


<div class="container">
    <div class="card-deck">
        @foreach (var item in Model)
        {
            <div class="card">
                <div class="view overlay">
                    <img class="card-img-top" src="@item.Imagen" alt="Imagen"/>
                    <a href="#!">
                        <div class="mask rgba-white-slight"></div>
                    </a>
                </div>
                <div class="card-body">
                    <h4 class="card-title text-center">@item.Nombre</h4>
                    <p class="card-text text-center">@item.Descripcion</p>
                    <hr>
                    <p class="card-text text-center">@item.Marca</p>
                    <hr>
                    <p class="card-text h1 text-center text-success">$ @item.Precio</p>
                </div>
            </div>
        }
     </div>
 </div>